{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,
    "plugins": [
      {
        "transform": "@vis.gl/ts-plugins/ts-transform-append-extension",
        "extensions": [".js"],
        "after": true
      },
      {
        "transform": "@vis.gl/ts-plugins/ts-transform-append-extension",
        "extensions": [".js"],
        "afterDeclarations": true
      }
    ]
  },
  "include":[
    "examples/**/*",
    "src/**/*",
    "test/**/*"
  ]
}
